<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.webimageloader.sample"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="7"
            android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:name=".ExampleApplication"
                 android:label="WebImageLoader sample">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".numbers.NumbersActivity" android:label="@string/numbers" />
        <activity android:name=".numbers.NumberDetailsActivity" android:label="@string/numbers" />

        <activity android:name=".progress.ProgressActivity" android:label="@string/progress" />

        <activity android:name=".patterns.PatternsActivity" android:label="@string/patterns" />
        <activity android:name=".patterns.PatternDetailsActivity" android:label="@string/patterns" />
    </application>

</manifest>
